<li>
          <div class="space-y-4">
              <%= link_to lesson do %>
                <div class="aspect-w-3 aspect-h-2">
                  <% if lesson.image.attached? %>
                    <%= image_tag(lesson.image, class: "object-contain max-h-full shadow-lg rounded-lg") %>
                  <% else %>
                    <img class="object-cover shadow-lg rounded-lg" src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80" alt="">
                  <% end %>
                </div>
              <% end %>
            <div class="space-y-2">
              <div class="text-lg leading-6 font-medium space-y-1">
                <h3><%= lesson.name %></h3>
                <p class="text-indigo-600"><%= lesson.number %></p>
              </div>

            </div>
          </div>
        </li>
