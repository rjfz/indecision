<%= form_for lobby do |f| %>
  <div class="grid grid-cols-5 gap-4 py-4">
    <div>
      <%= f.label :lesson %>
      <%= f.hidden_field :lesson_id, value: lobby.lesson_id %>
        <p> <%= Presenter.from(lobby.lesson).first.name %></p>
    </div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'border border-white rounded-md bg-transparent w-full' %>
    </div>
    <div>
      <%= f.label :date%>
      <%= f.text_field :session_date, class: 'border border-white rounded-md bg-transparent w-full' %>
    </div>
    <div>
      <%= f.label :academic_year%>
      <%= f.select :year_id, Year.all.map { [_1.academic_year, _1.id, { class: 'text-black' }] }, {}, { class: 'border border-white rounded-md bg-transparent w-full' } %>
    </div>
    <div class="w-full items-center">
        <label class="flex flex-row items-center justify-around py-1 bg-grey text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue hover:text-white mt-6">
          <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
          </svg>
          <span class="text-base leading-normal">Select a file</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
  </div>
  <%= f.submit class: 'btn btn-success bg-gray-700 px-6 py-2 rounded-md' %>
<% end %>
