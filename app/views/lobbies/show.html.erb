<% if current_user %>
  <%= turbo_frame_tag dom_id(@lobby) do %>
    <div class="w-full text-center pt-8">
      <h2 class="text-4xl">Room code: <strong><%= @lobby.room_code %></strong></h2>
    </div>
    <%= render @lobby %>
  <% end %>
<% else %>
  <%= turbo_stream_from @lobby.id %>
  <%= turbo_frame_tag dom_id(Response.new) do %>
    Waiting...
  <% end %>
<% end %>
