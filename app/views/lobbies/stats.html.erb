<div x-data="{ frame_src: '<%= cohort_lobby_path(@lobby) %>', active: 'cohort' }">
 <%= link_to 'Return to Lobby', lobby_path(@lobby), class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
<ul class="flex flex-wrap border-b border-gray-200 justify-around">
    <li class="mr-2">
        <button class="inline-block text-gray-500 hover:text-gray-600 hover:bg-gray-50 rounded-t-lg py-4 px-4 text-sm font-medium text-center" :class="{ 'bg-gray-100 text-blue-600' : active=='cohort' }" @click="frame_src='<%= cohort_lobby_path(@lobby) %>'; active='cohort'">Cohort Stats</button>
    </li>
    <li class="mr-2">
        <button class="inline-block text-gray-500 hover:text-gray-600 hover:bg-gray-50 rounded-t-lg py-4 px-4 text-sm font-medium text-center" :class="{ 'bg-gray-100 text-blue-600' : active=='individual' }" @click="frame_src='<%= individual_lobby_path(@lobby) %>'; active='individual'">Individual Stats</button>
    </li>
</ul>
<%= turbo_frame_tag "#{dom_id(@lobby)}_panel", ':src' => "frame_src" %>
</div>
