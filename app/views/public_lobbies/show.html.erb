<div class="font-heading text-center">
  <%= turbo_stream_from @lobby.id %>
  <%= turbo_frame_tag dom_id(Response.new) do %>
    <div class="flex flex-col w-72 mx-auto">
      <p class="pt-32 text-2xl">Hello<br><span class="text-yellow-300"><%= @anon_user.username %></span></p>
      <div class="mt-16 text-xl text-yellow-300">
        <p class="mx-auto p-4 border border-yellow-300 rounded-md">Score: <%= Response.where(lobby_question_id: @lobby.lobby_question_ids, anon_user_id: @anon_user.id).pluck(:points).sum %></p>
      </div>
      <p class="pt-32 text-gray-400 animate-pulse">Waiting for a question to start</p>
    </div>
  <% end %>
</div>
