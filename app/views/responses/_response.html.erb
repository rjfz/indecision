
<div>
  <div class="mt-3 text-center"  >
    <div class="w-full flex shadow-sm rounded-md px-4">
      <div class="flex-1 flex items-center justify-between border border-gray-200 bg-white rounded-r-md truncate">
        <div class="flex-1 px-4 py-2 text-sm truncate">
          <a href="#" class="text-gray-900 font-medium hover:text-gray-600"><%= response.lobby_question.question.title %></a>
          <p class="text-gray-500 text-sm"><%= response.lobby_question.question.time_limit %></p>
        </div>
      </div>
    </div>
    <%= form_for response, html: { class: 'grid grid-cols-1 lg:grid-cols-4 gap-6 w-full mt-6', 'x-data' => '{selected_answer: ""}' } do |f| %>
      <%= f.hidden_field :lobby_question_id %>
      <%= f.hidden_field :answer_id, ':value' => 'selected_answer' %>
      <% response.lobby_question.question.answers.each do |answer|%>
        <div class="flex rounded-md px-4" :class="(selected_answer == '<%= answer.id %>') ? 'bg-green-500' : '' ">
          <div class="flex-1 flex items-center justify-between border bg-white rounded-md truncate" :class="(selected_answer == '<%= answer.id %>') ? 'border-green-500' : '' " @click="selected_answer='<%= answer.id %>'">
            <div class="flex-1 px-4 py-2 text-sm">
              <%= answer.value %>
            </div>
          </div>
        </div>
      <% end %>
      <%= f.submit 'Submit response' %>
    <% end %>
  </ul>
</div>
